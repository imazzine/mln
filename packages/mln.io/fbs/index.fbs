namespace worker;

struct Uid { uid: [uint8: 16]; }

enum Mode: byte { Req, Res, Msg }

enum Type: byte { Sync, Rate, Stream, Unstream, Content }

table Sync {
  resources: [string];
}

table Rate {
  worker: Uid;
  resource: string;
  rating: short;
}

table Stream {}

table Unstream {}

table Content {
  data: [uint8];
}

union Scope { Sync, Rate, Stream, Unstream, Content }

table Message {
  mode: Mode;
  type: Type;
  source: Uid;
  target: Uid;
  scope: Scope;
}

root_type Message;